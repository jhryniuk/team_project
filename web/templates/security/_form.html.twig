{{ form_start(form) }}
<div class="p-3">
    <div class="row py-1">
        <div class="col-1">Email: </div>
        <div class="col-3">{{ form_widget(form.email) }}</div>
    </div>
    <div class="row py-1">
        <div class="col-1">Roles: </div>
        <div class="col-3">{{ form_widget(form.roles) }}</div>
    </div>
    <div class="row py-1">
        <div class="col-1">Password: </div>
        <div class="col-3">{{ form_widget(form.password) }}</div>
    </div>
    <div class="row py-1">
        <div class="col-1"></div>
        <div class="col-3"><button class="btn btn-primary">{{ button_label|default('Save') }}</button></div>
    </div>

</div>
{{ form_end(form) }}
