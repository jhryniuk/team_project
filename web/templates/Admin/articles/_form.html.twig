{{ form_start(form) }}
<div class="p-3">
    <div class="row py-1">
        <div class="col-1">Title: </div>
        <div class="col-3">{{ form_widget(form.title) }}</div>
    </div>
    <div class="row py-1">
        <div class="col-1">Content: </div>
        <div class="col-3">{{ form_widget(form.content) }}</div>
    </div>
    <div class="row py-1">
        <div class="col-1">Image: </div>
        <div class="col-3">{{ form_widget(form.image) }}</div>
    </div>
    <div class="row py-1">
        <div class="col-1"></div>
        <div class="col-3"><button class="btn btn-primary">{{ button_label|default('Save') }}</button></div>
    </div>

</div>
{{ form_end(form) }}
